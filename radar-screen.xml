 <layer>
   <name>radar heading</name>
   <texture>
    <path>Aircraft/ATC/panel-bg.rgb</path>
    <x1>0.354</x1>
    <y1>0.146</y1>
    <x2>0.643</x2>
    <y2>0.724</y2>
   </texture>
   <emissive>true</emissive>
   <w>300</w>
   <h>300</h>
   <transformations>
            <transformation>
                <type>rotation</type>
                <property>/orientation/heading-deg</property>
                <scale>-1</scale>
            </transformation>
        </transformations>
  </layer>


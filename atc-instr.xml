        </layers>

        <actions>

                <action>
                        <name>previous mp</name>
                        <type>adjust</type>
                        <button>0</button>
                        <x>-98</x>
                        <y>-282</y>
                        <w>24</w>
                        <h>24</h>
                        <binding>
                                <command>nasal</command>
                                <script>globals.ATC.step_target(-1);</script>
                        </binding>
                </action>

                <action>
                        <name>next mp</name>
                        <type>adjust</type>
                        <button>0</button>
                        <x>22</x>
                        <y>-282</y>
                        <w>24</w>
                        <h>24</h>
                        <binding>
                                <command>nasal</command>
                                <script>globals.ATC.step_target(1);</script>
                        </binding>
                </action>

                <!--    radar     -->

                <action>
                        <name>radar down</name>
                        <type>adjust</type>
                        <button>0</button>
                        <x>336</x>
                        <y>-282</y>
                        <w>24</w>
                        <h>24</h>
                        <binding>
                                <command>nasal</command>
                                <script>globals.ATC.step_radar_range(-1);</script>
                        </binding>
                </action>

                <action>
                        <name>radar up</name>
                        <type>adjust</type>
                        <button>0</button>
                        <x>420</x>
                        <y>-282</y>
                        <w>24</w>
                        <h>24</h>
                        <binding>
                                <command>nasal</command>
                                <script>globals.ATC.step_radar_range(1);</script>
                        </binding>
                </action>

        </actions>

</PropertyList>